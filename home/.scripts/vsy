#!/bin/bash
set -e
set -o pipefail

export VDIRSYNCER_NEXTCLOUD_PASSWORD="$(pass www/nextcloud.unterwaditzer.net/login | head -1)"

[ -n "$VDIRSYNCER_NEXTCLOUD_PASSWORD" ]

export VDIRSYNCER_RUNTASTIC_CLIENT_ID="$(pass misc/google-runtastic | grep client_id | cut -d':' -f 2)"
[ -n "$VDIRSYNCER_RUNTASTIC_CLIENT_ID" ]

export VDIRSYNCER_RUNTASTIC_CLIENT_SECRET="$(pass misc/google-runtastic | grep client_secret | cut -d':' -f 2)"
[ -n "$VDIRSYNCER_RUNTASTIC_CLIENT_SECRET" ]

_watch() {
    local path="$1"
    local collection="$2"
    (
        echo "Initial sync"
        while true; do
            sleep 5
            inotifywait \
                -t 300 \
                -rq \
                -e create -e delete -e move \
                --include='.(vcf|ics)$' \
                "$path" || ([ "$?" = "2" ] && echo "Timeout")
        done
    ) | while read event; do  # exit 2 is for timeouts
        echo -e "$C_RED$event$C_RESET"
        vdirsyncer sync $collection
        _autocommit $path $collection
    done | while read line; do
        echo "$collection: $line"
    done
}

_autocommit() {
    local path="$1"
    local collection="$2"
    cd "$path"
    git init -q
    if _is_dirty; then
        git add -A
        git commit --allow-empty -m "$(date)"
    else
        echo "Nothing to commit"
    fi
}

_is_dirty() {
    (! git diff-index --quiet HEAD) ||
        [[ $(git status --porcelain | tail -n1) != "" ]]
}

main() {
    trap 'kill $(jobs -p) &> /dev/null' TERM EXIT
    for nextcloud_cal in computers default holidays holidays-auto media ssl-certs tiss; do
        _watch ~/.calendars/$nextcloud_cal calendars/$nextcloud_cal &
    done
    _watch ~/.contacts contacts &
    _watch ~/.calendars/runtastic/ calendars_runtastic/runtastic &
    wait
}

if [ -z "$1" ]; then
    main
else
    vdirsyncer "$@"
fi
